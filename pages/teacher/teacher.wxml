<!--pages/teacher/teacher.wxml-->
<view class="page">
  <view class="page__hd">
  </view>
  <view class="page__bd">


    <view class="page_list" wx:for="{{teachers}}" wx:key="id">

      <view wx:if="{{index%2==0}}">
        <view class="weui-flex lineB">
          <view class="">
            <image class="userinfo-avatar" src="{{item.avatarUrl}}" background-size="cover"></image>

          </view>

          <view class="">
            <view class="weui-flex">

              <view class="weui-flex__item" style="font-weight:bold">
                {{item.nickName}}
              </view>
            </view>

            <view class="weui-flex">

              <view class="weui-flex__item lineB">
                主讲课程:{{item.course}}
              </view>
            </view>

            <view class="weui-flex">

              <view class="weui-flex__item" style="color:gray">
                {{item.expert}}
              </view>
            </view>

          </view>
        </view>
      </view>
      <view wx:if="{{index%2==1}}">
        <view class="weui-flex lineB">

          <view class="">
            <view class="weui-flex">

              <view class="weui-flex__item" style="font-weight:bold">
                {{item.nickName}}
              </view>
            </view>

            <view class="weui-flex">

              <view class="weui-flex__item lineB">
                主讲课程:{{item.course}}
              </view>
            </view>

            <view class="weui-flex">

              <view class="weui-flex__item" style="color:gray">
                {{item.expert}}
              </view>
            </view>

          </view>
          <view class="">
            <image class="userinfo-avatar" src="{{item.avatarUrl}}" background-size="cover"></image>

          </view>
        </view>
      </view>
    </view>
  </view>
</view>